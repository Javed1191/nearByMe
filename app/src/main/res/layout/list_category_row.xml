<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_main_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="#000"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="#FFFFFF"
        >


        <LinearLayout
            android:id="@+id/lay_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            >


            <TextView
                android:id="@+id/tv_security_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Client_Agreement.pdf"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_pdf"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_allocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.5%"
                    android:textColor="@color/colorHintText"
                    android:textSize="12sp"/>


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_parent"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="iShares MSCI EM Islamic"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackText"/>

                <TextView
                    android:id="@+id/tv_child_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$142.50    1.94%"
                    android:textColor="@color/colorHintText"
                    android:textSize="12sp"
                    android:visibility="gone"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_download1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_running_perc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$14.69"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackText"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_up"

                        />

                    <TextView
                        android:id="@+id/tv_share_change_perc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+0.36%)"
                        android:textColor="@color/colorControlActivated"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/img_download1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_arrow_next"

                />

        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:paddingBottom="10dp"/>

</LinearLayout>