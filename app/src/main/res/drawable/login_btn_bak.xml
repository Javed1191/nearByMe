<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />

            <stroke android:width="0dip" android:color="@android:color/white" />

            <gradient
                android:angle="270"
                android:startColor="#1e498b"
                android:centerColor="#1c4684"
                android:endColor="#1a4079"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />

            <stroke android:width="0dip" android:color="@android:color/white" />

            <gradient
                android:angle="270"
                android:startColor="#1e498b"
                android:centerColor="#1c4684"
                android:endColor="#1a4079"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />

            <stroke android:width="0dip" android:color="@android:color/white" />

            <gradient
                android:angle="270"
                android:startColor="#183a6d"
                android:centerColor="#163768"
                android:endColor="#153462"/>

        </shape>
    </item>

</selector>