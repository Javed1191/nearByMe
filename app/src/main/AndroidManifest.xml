<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.infomanav.wahed">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@mipmap/wahed_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".MyApp"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
                  android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SecurityActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".NotificationActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".InvestmentProfileActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".AccountHistoryActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".TAndCActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".MyProfileActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".TransactionDetailsActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".PositionDetailsActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ChangePasswordActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ForgotPasswordActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:screenOrientation="portrait"/>

        <activity android:name=".PieChartActivity">
        </activity>
        <activity android:name=".HorizontalBarChartActivity">
        </activity>
        <activity android:name=".TimeChartActivity">
        </activity>
    </application>

</manifest>